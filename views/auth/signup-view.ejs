<h2> Sign Up Please </h2>

<% if (typeof errorMessage !== "undefined") { %>
  <div class="error"> <%= errorMessage %> </div>
<% } %>

<form method='post' action='/signup'>

  <label for="name-input"> Your Name: </label>
  <input id="name-input" type="text" name="signupName">

  <br>

  <label for="username-input"> Username: </label>
  <input id="username-input" type="text" name="signupUsername">

  <br>

  <label for="password-input"> Your Password: </label>
  <input id="password-input" type="password" name="signupPassword">

  <br>

  <button> Sign Up </button>
</form>

<p> Do you already have an account?
  <a href="/login"> Log In </a>
</p>
<br>
<p><a href="/auth/facebook">Log In with Facebook </a></p>
<br>

<p><a href="/auth/google">Log In with Google </a></p>
